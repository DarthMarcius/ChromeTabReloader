{
  "manifest_version": 2,

  "name": "Tab Reloader",
  "description": "This extension will reload current browser tab after message from node.js",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png"
  },
  
  "background": {
    "scripts": ["tab_reloader.js"],
    "persistent": false
  },

  "permissions": [
   "activeTab",
   "nativeMessaging"
   ]
}
